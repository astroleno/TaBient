{
  "manifest_version": 3,
  "name": "浮声 TaBient",
  "version": "1.0.0",
  "description": "一个让 Chrome 标签切换时有氛围音效的小插件",
  "permissions": [
    "tabs",
    "storage",
    "offscreen",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background-bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "artbreeze-style-options.html",
    "default_title": "TaBient 设置"
  },
  "options_page": "artbreeze-style-options.html",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}